<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >


    <LinearLayout

        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@drawable/bgheader" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"

                android:id="@+id/profilimage"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_user_circle" />

            <TextView
                android:id="@+id/nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="9dp"
                android:layout_toEndOf="@+id/profilimage"
                android:fontFamily="sans-serif-black"
                android:text="Rumah 1"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <Button
                android:layout_width="33dp"
                android:layout_height="29dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/ic_settings_black_24dp" />

            <TextView
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/profilimage"
                android:text="Saldo : Rp. 400.000"
                android:textColor="#FFFF" />

            <TextView
                android:id="@+id/Exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/point"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/profilimage"
                android:text="Air : 5 Liter "
                android:textColor="#FFFF"
                android:textSize="15sp" />

            <androidx.cardview.widget.CardView
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/cardview"
                android:layout_below="@id/Exp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="25dp"
                app:cardBackgroundColor="@color/btnLogin"
                app:cardCornerRadius="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:id="@+id/menu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <RelativeLayout
                            android:id="@+id/smartarthesis"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconsmartarthesis"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/smartarthesis"
                                app:srcCompat="@drawable/iconsmartarthesis" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconsmartarthesis"
                                android:layout_centerHorizontal="true"
                                android:text="@string/smartarthesis"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/smartwarung"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconsmartwarung"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/smartwarung"
                                app:srcCompat="@drawable/iconsmartwarung" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconsmartwarung"
                                android:layout_centerHorizontal="true"
                                android:text="@string/smartwarung"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/museumdigital"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconMuseumDigital"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/museumdigital"
                                app:srcCompat="@drawable/museumdigital" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconMuseumDigital"
                                android:layout_centerHorizontal="true"
                                android:text="@string/museumdigital"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/polling"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconPolling"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/polling"
                                app:srcCompat="@drawable/polling" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconPolling"
                                android:layout_centerHorizontal="true"
                                android:text="@string/polling"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/menu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu1">

                        <RelativeLayout
                            android:id="@+id/digitalsociety"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/icondigitalsociety"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/difitalsociety"
                                app:srcCompat="@drawable/icondigitalsociety" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/icondigitalsociety"
                                android:layout_centerHorizontal="true"
                                android:text="@string/difitalsociety"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lapor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconlapor"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/lapor"
                                app:srcCompat="@drawable/iconlapor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconlapor"
                                android:layout_centerHorizontal="true"
                                android:text="@string/lapor"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/usulan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconusulan"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/usulan"
                                app:srcCompat="@drawable/iconusulan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconusulan"
                                android:layout_centerHorizontal="true"
                                android:text="@string/usulan"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/survey"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconsurvey"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/survey"
                                app:srcCompat="@drawable/iconsurvey" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconsurvey"
                                android:layout_centerHorizontal="true"
                                android:text="@string/survey"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/menu3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="10dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/menu2">

                        <RelativeLayout
                            android:id="@+id/nomorpenting"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconnomorpenting"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/nomorpenting"
                                app:srcCompat="@drawable/iconnomorpenting" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconnomorpenting"
                                android:layout_centerHorizontal="true"
                                android:text="@string/nomorpenting"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/admin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconadmin"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/admin"
                                app:srcCompat="@drawable/iconadmin" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconadmin"
                                android:layout_centerHorizontal="true"
                                android:text="@string/admin"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/administrasi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconadministrasi"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/administrasi"
                                app:srcCompat="@drawable/iconadministrasi" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconadministrasi"
                                android:layout_centerHorizontal="true"
                                android:text="@string/administrasi"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lainnya"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".25">

                            <ImageView
                                android:id="@+id/iconlainnya"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_centerHorizontal="true"
                                android:contentDescription="@string/lainnya"
                                app:srcCompat="@drawable/iconlainnya" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iconlainnya"
                                android:layout_centerHorizontal="true"
                                android:text="@string/lainnya"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Cara Kerja"
            android:textSize="30sp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Berikut adalah cara kerja aplikasi" />

        <com.synnapps.carouselview.CarouselView
android:layout_marginBottom="60dp"
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp"
            android:padding="10dp"/>
    </LinearLayout>

</ScrollView>